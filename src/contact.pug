extends pug/base

append vars
	-
		var body = {
			classList: ["header-bg-2"]
		}
		var works = new Array(6)

block content
	.main-wrap
		.site__layer


		include pug/header
		.hero.page-header
			.container
				.hero__caption
					h1.page-header__title
						| Contact Us
					.page-header__text
						p
							| Digital nomads, that strive for excellence.
			.hero__shape
				img(src="images/bg/page-header_wawe.png", alt="").hero__shape__default
				img(src="images/bg/page-header_wawe-mob.png", alt="").hero__shape__mob

				

		main.main-container
			.container
				include pug/breadcrumbs

			.contact
				.container
					h2.title.text-lg.contact__title.hidden-lg
						| How can we help?

					.row
						.col-lg-6.contact__left__col
							.contact-info
								h3.contact-info__title.visible-lg
									| Contact Details
								.contact-info__desc.hidden-lg
									p
										| Foundry have been designing digital solutions & experiences that drive online growth since 2008. 

								ul.contact-list
									li.contact-list__item
										i.icon.fa.fa-phone
										span.contact-list__text
											a(href="tel:0800 267 894") 0800 267 894
									li.contact-list__item
										i.icon.fa.fa-envelope-o
										span.contact-list__text
											a(href="mailto:hello@foundry.nz") hello@foundry.nz
									li.contact-list__item
										i.icon.fa.fa-map-marker
										span.contact-list__text
											a(href="#" target="_blank")
												| 12 Madden Street, Wynyard Quarter Auckland 1010
												i.fa.fa-external-link

						.col-lg-6.contact__right__col
							.contact-info__desc.visible-lg
								p
									| Foundry have been designing digital solutions & experiences that drive online growth since 2008. 


							form(action="#").contact-form
								label
									| Full Name
									span
										| *
								input.form-control(type="text")
								label
									| Email
									span
										| *
								input.form-control(type="text")
								label
									| Phone
								input.form-control(type="text")
								label
									| Message
								textarea.form-control(type="text", placeholder="How can we help you...")
								button.btn.btn-primary.btn-block
									| Let’s Talk
									
								
								
									

								







			.help-feedback.hidden-lg
				.container
					.help-feedback__inner

							h3.help-feedback__title.lead
								| Let us help you reach your business goals
							p.help-feedback__subtitle
								| Arrange a no obligation meeting or call today
							form(action="#").help-feedback-form
								.help-feedback__slide
									.row
										.col-md-6
											input.form-control(type="text", placeholder="Your Name*")
										.col-md-6
											input.form-control(type="text", placeholder="Your Email*")
										.col-md-6
											input.form-control(type="text", placeholder="Phone Number")
										.col-md-6
											input.form-control(type="text", placeholder="Company name")

								.text-center
									button.btn.btn-outline-white.btn-all.help-feedback-form__btn.btn_width_300(data-text="Let’s Talk", data-swap="Send")
										| Let’s Talk

		

		include pug/footer    